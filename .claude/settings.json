{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Skill",
      "Write",
      "Edit",
      "MultiEdit",
      "Bash(bun:*)",
      "Bash(cd:*)",
      "Bash(gh:*)",
      "Bash(gh issue:*)",
      "Bash(gh pr:*)",
      "Bash(gh repo:*)",
      "Bash(gh api:*)",
      "Bash(gh search:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/PreToolUse/validate-phase-order.sh"
          },
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/PreToolUse/validate-task-execution.sh"
          },
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/PreToolUse/validate-template-substitution.sh"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/PreToolUse/block-direct-edits.sh"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/PreToolUse/block-direct-edits.sh"
          }
        ]
      },
      {
        "matcher": "MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/PreToolUse/block-direct-edits.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/PreToolUse/guard-state-file.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/SubagentStop/dispatch.sh"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/SubagentStart/mark-subagent-active.sh"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/SessionStart/cleanup-stale-subagents.sh"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "frontend-design@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": false,
    "pr-review-toolkit@claude-plugins-official": true,
    "agent-sdk-dev@claude-plugins-official": true,
    "jdtls-lsp@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "marketing-skills@marketingskills": true,
    "atlassian@claude-plugins-official": true,
    "obsidian@local": true
  },
  "alwaysThinkingEnabled": true,
  "feedbackSurveyState": {
    "lastShownTime": 1755073915037
  }
}
